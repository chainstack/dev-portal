{
  "openapi": "3.0.0",
  "info": {
    "title": "wallet/broadcasthex TRON API",
    "version": "1.0.0",
    "description": "Broadcast a transaction in hex format to the TRON network"
  },
  "servers": [
    {
      "url": "https://tron-mainnet.core.chainstack.com"
    }
  ],
  "paths": {
    "/95e61622bf6a8af293978377718e3b77/wallet/broadcasthex": {
      "post": {
        "tags": [
          "Transaction Operations"
        ],
        "summary": "wallet/broadcasthex",
        "operationId": "broadcastHex",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "transaction": {
                    "type": "string",
                    "description": "The transaction data in hexadecimal format"
                  }
                },
                "required": ["transaction"],
                "example": {
                  "transaction": ""
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Transaction broadcast result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "boolean",
                      "description": "Whether the broadcast was successful"
                    },
                    "txid": {
                      "type": "string",
                      "description": "Transaction ID if successful"
                    },
                    "message": {
                      "type": "string",
                      "description": "Status message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "x-readme": {
    "explorer-enabled": true,
    "proxy-enabled": true
  }
}
