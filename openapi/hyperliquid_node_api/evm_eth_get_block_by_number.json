                    "transactions": ["0xabc123...", "0xdef456..."],
                    "miner": "0x0000000000000000000000000000000000000000",
                    "difficulty": "0x0",
                    "totalDifficulty": "0x0",
                    "size": "0x220",
                    "extraData": "0x"
