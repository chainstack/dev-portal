{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Chainstack",
  "colors": {
    "primary": "#007aff",
    "light": "#007aff",
    "dark": "#007aff"
  },
  "favicon": "/favicon.png",
  "background": {
    "decoration": "gradient",
    "color":{
      "dark": "#000020"
    }
  },
  "appearance": {
    "default": "light"
  },
  "styling": {
    "codeblocks": "system"
  },
  "fonts":{
    "heading": {
      "family": "Poppins"
    },
    "body": {
      "family": "Inter"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Home",
        "pages": [
          "home"
        ]
      },
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Platform",
            "pages": [
              "docs/platform-introduction",
              "docs/manage-your-account",
              "docs/manage-your-organization",
              "docs/manage-your-billing",
              "docs/manage-your-project",
              "docs/manage-your-networks",
              "docs/see-statistics",
              "docs/faucets"
            ]
          }
        ]
      },
      {
        "tab": "Recipes",
        "groups": [
          {
            "group": "Recipes",
            "pages": [
                  "recipes",
                  "recipes/env-file",
                  "recipes/extract-randao-value-from-the-ethereum-beacon-chain-using-the-block-details-method-1" 
            ]
          }
        ]
      },
      {
        "tab": "API",
        "groups": [
          {
            "group": "APIs Introduction",
            "pages": [
              "reference/blockchain-apis",
              "reference/web3-libraries"
            ]
          },
          {
            "group": "Ethereum Beacon chain API",
            "pages": [
              "reference/beacon-chain",
              {
                "group": "Beacon Chain Configuration Info",
                "pages": [
                  "reference/beacon-chain-configuration",
                  "reference/getforkinformation",
                  "reference/ethereum-beacon-genesis"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "Changelog",
        "pages": [
          "changelog"
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Status",
          "href": "https://status.chainstack.com/",
          "icon": "signal"
        },
        {
          "anchor": "Community",
          "href": "https://discord.gg/Cymtg2f7pX",
          "icon": "discord"
        },
        {
          "anchor": "Blog",
          "href": "https://chainstack.com/blog/",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://chainstack.com/"
  },
  "navbar": {
    "links": [
      {
        "label": "Log in",
        "href": "https://console.chainstack.com/user/login"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Start for free",
      "href": "https://console.chainstack.com/user/account/create"
    }
  },
  "footer": {
    "socials": {
      "x": "https://twitter.com/ChainstackHQ",
      "discord": "https://discord.gg/Cymtg2f7pX",
      "linkedin": "https://www.linkedin.com/company/chainstack/",
      "telegram": "https://t.me/chainstack",
      "facebook": "https://www.facebook.com/chainstack",
      "youtube": "https://www.youtube.com/c/Chainstack"
    }
  }
}
